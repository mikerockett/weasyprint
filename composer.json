{
  "name": "rockett/weasyprint",
  "description": "A simple Laravel wrapper for the WeasyPrint PDF Engine.",
  "type": "library",
  "license": "ISC",
  "authors": [
    {
      "name": "Mike Rockett",
      "email": "mike@rockett.pw"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.3.0",
    "symfony/process": "^5.0|^6.0",
    "illuminate/support": "^7.0|^8.0|^9.0|^10.0"
  },
  "require-dev": {
    "orchestra/testbench": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "WeasyPrint\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "WeasyPrint\\WeasyPrintProvider"
      ]
    }
  },
  "scripts": {
    "test": [
      "@cda",
      "@phpunit"
    ],
    "cda": "composer dumpautoload",
    "phpunit": "./vendor/bin/phpunit --testdox --colors=always"
  }
}
